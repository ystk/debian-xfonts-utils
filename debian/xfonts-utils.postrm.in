#!/bin/sh

set -e

THIS_PACKAGE=xfonts-utils
THIS_SCRIPT=postrm

#INCLUDE_SHELL_LIB#

EXCLUDE_DIR=/var/lib/xfonts
EXCLUDE=$EXCLUDE_DIR/excluded-aliases

if [ "$1" = purge ]; then
    if [ -d $EXCLUDE_DIR ]; then
        rm -f $EXCLUDE
        rmdir --ignore-fail-on-non-empty $EXCLUDE_DIR
    fi
fi

